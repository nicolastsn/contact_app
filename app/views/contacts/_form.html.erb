<div class="pull-right">
  <%= link_to 'index', contacts_path %>
</div>

<%= simple_form_for @contact do |f| %>

  <div class="input">
    <% if @contact.avatar? %>
      <%= image_tag @contact.avatar_url %>
    <% else %>
      <%= image_tag (contact.avatar.present? ? contact.avatar_url : 'placeholder.jpg') %>
    <%end%>

    <%= f.input :avatar, label: false, as: :file, wrapper: :horizontal_file_input %>

    <div class="row">
      <div class="col-md-6">
        <%= f.input :first_name, label: "Prénom",required: false %>
      </div>
      <div class="col-md-6">
        <%= f.input :last_name, label: 'Nom' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :address, label: "Adresse" %>
      </div>
      <div class="col-md-2">
        <%= f.input :zip, label: "Code postal" %>
      </div>
      <div class="col-md-4">
        <%= f.input :country, as: :string, label: "Pays" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :email %>
      </div>
      <div class="col-md-6">
        <%= f.input :phone, label: "Tél" %>
      </div>
    </div>
  </div>

    <%= f.button :submit, 'Créer contact'%>

<% end %>
